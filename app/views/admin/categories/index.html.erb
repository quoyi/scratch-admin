<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active"><%= t('admin.categories') %></li>
<% end %>
<% content_for :navbars do %>
  <%= link_to t('new'), [:new, :admin, :category], class: 'btn btn-sm btn-primary mt-n2 mb-n1' %>
<% end %>

<div class="card border-0 mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <%= render 'search' %>
  </div>
</div>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= Category.human_attribute_name('name') %></th>
            <th><%= Category.human_attribute_name('status') %></th>
            <th><%= Category.human_attribute_name('parent_id') %></th>
            <th><%= Category.human_attribute_name('classifiable') %></th>
            <th colspan="3"><%= I18n.t('operation') %></th>
          </tr>
        </thead>

        <tbody>
          <%= render @categories %>
        </tbody>
      </table>
    </div>

    <%= paginate @categories %>
  </div>
</div>
