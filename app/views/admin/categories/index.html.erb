<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active"><%= t('admin.categories') %></li>
<% end %>
<% content_for :navbars do %>
  <%= link_to t('new'), [:new, :admin, :category], class: 'btn btn-sm btn-primary mt-n2 mb-n1' %>
<% end %>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <%= render 'search' %>
  </div>
</div>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= Category.human_attribute_name('name') %></th>
            <th><%= Category.human_attribute_name('status') %></th>
            <th><%= Category.human_attribute_name('superior') %></th>
            <th><%= Category.human_attribute_name('classifiable') %></th>
            <th colspan="3"><%= I18n.t('operation') %></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.superior_name %></td>
              <td><%= category.status_name %></td>
              <td><%= category.classifiable_id %></td>
              <td><%= link_to t('show'), [:admin, category], class: 'text-nowrap' %></td>
              <td><%= link_to t('edit'), [:edit, :admin, category], class: 'text-nowrap' %></td>
              <td><%= link_to t('destroy'), [:admin, category], method: :delete, class: 'text-nowrap', data: { confirm: t('delete_confirm') } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @categories %>
  </div>
</div>
