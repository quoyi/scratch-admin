<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active"><%= t('admin.courses') %></li>
<% end %>
<% content_for :navbars do %>
  <%= link_to t('new'), [:new, :admin, :course], class: 'btn btn-sm btn-primary mt-n2 mb-n1' %>
<% end %>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <%= render 'search' %>
  </div>
</div>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= Course.human_attribute_name('code') %></th>
            <th><%= Course.human_attribute_name('name') %></th>
            <th><%= Course.human_attribute_name('status') %></th>
            <th><%= Course.human_attribute_name('mold') %></th>
            <th><%= Course.human_attribute_name('juniors_count') %></th>
            <th><%= Course.human_attribute_name('creator') %></th>
            <th colspan="3"><%= I18n.t('operation') %></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <% draw_tree(partial: 'course', object: course) %>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @courses %>
  </div>
</div>
