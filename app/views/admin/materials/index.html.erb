<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active"><%= t('admin.materials') %></li>
<% end %>
<% content_for :navbars do %>
  <%= link_to t('new'), [:new, :admin, :material], class: 'btn btn-sm btn-primary mt-n2 mb-n1' %>
<% end %>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <%= render 'search' %>
  </div>
</div>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= Material.human_attribute_name('code') %></th>
            <th><%= Material.human_attribute_name('name') %></th>
            <th><%= Material.human_attribute_name('status') %></th>
            <th><%= Material.human_attribute_name('mold') %></th>
            <th><%= Material.human_attribute_name('used') %></th>
            <th><%= Material.human_attribute_name('category') %></th>
            <th><%= Material.human_attribute_name('uploader') %></th>
            <th colspan="3"><%= I18n.t('operation') %></th>
          </tr>
        </thead>

        <tbody>
          <% @materials.each do |material| %>
            <tr>
              <td><%= material.code %></td>
              <td><%= material.name %></td>
              <td><%= material.status_name %></td>
              <td><%= material.mold_name %></td>
              <td><%= material.used %></td>
              <td><%= material.category_id %></td>
              <td><%= material.uploader_id %></td>
              <td><%= link_to t('show'), [:admin, material], class: 'text-nowrap' %></td>
              <td><%= link_to t('edit'), [:edit, :admin, material], class: 'text-nowrap' %></td>
              <td><%= link_to t('destroy'), [:admin, material], method: :delete, class: 'text-nowrap', data: { confirm: t('delete_confirm') } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @materials %>
  </div>
</div>
