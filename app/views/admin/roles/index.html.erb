<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active"><%= t('admin.roles') %></li>
<% end %>
<% content_for :navbars do %>
  <%= link_to t('new'), [:new, :admin, :role], class: 'btn btn-sm btn-primary mt-n2 mb-n1' %>
<% end %>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <%= render 'search' %>
  </div>
</div>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= Role.human_attribute_name('code') %></th>
            <th><%= Role.human_attribute_name('name') %></th>
            <th><%= Role.human_attribute_name('organization') %></th>
            <th><%= Role.human_attribute_name('status') %></th>
            <th colspan="3"><%= I18n.t('operation') %></th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.code %></td>
              <td><%= role.name %></td>
              <td><%= role.organization_name %></td>
              <td><%= role.status_name %></td>
              <td><%= link_to t('show'), [:admin, role], class: 'text-nowrap' %></td>
              <td><%= link_to t('edit'), [:edit, :admin, role], class: 'text-nowrap' %></td>
              <td><%= link_to t('destroy'), [:admin, role], method: :delete, class: 'text-nowrap', data: { confirm: t('delete_confirm') } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @roles %>
  </div>
</div>
