<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active"><%= t('admin.users') %></li>
<% end %>
<% content_for :navbars do %>
  <%= link_to t('new'), [:new, :admin, :user], class: 'btn btn-sm btn-primary mt-n2 mb-n1' %>
<% end %>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <%= render 'search' %>
  </div>
</div>

<div class="card mb-1 mb-sm-2 mb-lg-3">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= User.human_attribute_name('mobile') %></th>
            <th><%= User.human_attribute_name('email') %></th>
            <th><%= User.human_attribute_name('nick') %></th>
            <th><%= User.human_attribute_name('role') %></th>
            <th colspan="3"><%= I18n.t('operation') %></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.mobile %></td>
              <td><%= user.email %></td>
              <td><%= user.nick %></td>
              <td><%= user.role_name %></td>
              <td><%= link_to t('show'), [:admin, user], class: 'text-nowrap' %></td>
              <td><%= link_to t('edit'), [:edit, :admin, user], class: 'text-nowrap' %></td>
              <td><%= link_to t('destroy'), [:admin, user], method: :delete, class: 'text-nowrap', data: { confirm: t('delete_confirm') } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @users %>
  </div>
</div>
