<nav class="navbar navbar-expand-md sticky-top navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_pack_tag 'brand.png', class: 'd-inline-block align-top mr-1', width: 30, height: 30, loading: 'lazy', alt: 'Brand' %>
      <%= Setting.app_name %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#applicationNavbar" aria-controls="applicationNavbar" aria-expanded="false" aria-label="切换导航">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="applicationNavbar">
      <%# 功能导航 %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to '首页', root_path, class: "nav-link #{'active' if controller_name == 'home'}", aria: { current: 'page' } %>
        </li>
        <li class="nav-item">
          <%= link_to '关于我们', '#!', class: 'nav-link disabled', aria: { disabled: true } %>
        </li>
        <li class="nav-item">
          <%= link_to '联系我们', '#!', class: 'nav-link disabled', aria: { disabled: true } %>
        </li>
      </ul>

      <%# 用户信息 %>

      <div class="d-flex my-2 my-md-0">
        <% if current_user %>
          <%= link_to '<span class="fas fa-bell"></span>'.html_safe, '#!', class: 'btn btn-link text-muted' %>
          <%= link_to '<span class="fas fa-plus"></span>'.html_safe, '#!', class: 'btn btn-link text-muted' %>
          <div class="dropdown mr-n3">
            <%= link_to current_user.name, '#', class: 'btn btn-link text-muted dropdown-toggle', id: 'accountDropdown', role: 'button', data: { toggle: 'dropdown' }, aria: { expanded: false } %>
            <div class="dropdown-menu dropdown-menu-md-right" aria-labelledby="accountDropdown">
              <%= link_to '个人设置', edit_user_registration_path, class: 'dropdown-item' %>
              <%= link_to '修改密码', edit_user_password_path, class: 'dropdown-item' %>
              <hr class="dropdown-divider">
              <%= link_to '退出登录', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </div>
        <% else %>
          <%= link_to '注册', new_user_registration_path, class: 'btn btn-outline-success mr-2' %>
          <%= link_to '登录', new_user_session_path, class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
